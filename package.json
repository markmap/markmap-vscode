{
  "name": "markmap-vscode",
  "version": "0.0.8",
  "description": "Visualize your markdown in VSCode",
  "author": "Gerald <gera2ld@live.com>",
  "license": "MIT",
  "displayName": "Markmap",
  "publisher": "gera2ld",
  "icon": "assets/favicon.png",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Visualization"
  ],
  "keywords": [
    "markmap",
    "mindmap",
    "markdown"
  ],
  "activationEvents": [
    "onCommand:markmap-vscode.open",
    "onCustomEditor:markmap-vscode.markmap",
    "onCustomEditor:markmap-vscode.markmap.default"
  ],
  "contributes": {
    "commands": [
      {
        "command": "markmap-vscode.open",
        "title": "Open as markmap",
        "icon": {
          "light": "./assets/light.svg",
          "dark": "./assets/dark.svg"
        }
      }
    ],
    "customEditors": [
      {
        "viewType": "markmap-vscode.markmap",
        "displayName": "Markmap",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ],
        "priority": "option"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "markmap-vscode.open",
          "when": "editorLangId == markdown"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == markdown",
          "command": "markmap-vscode.open",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "when": "resourceLangId == markdown && activeEditor == workbench.editors.files.textFileEditor",
          "command": "markmap-vscode.open",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn lint && yarn build",
    "build": "gulp clean && gulp build",
    "lint": "eslint --ext .ts,.tsx .",
    "watch": "gulp dev",
    "transform": "locky yarn yarn"
  },
  "repository": "https://github.com/gera2ld/markmap-vscode",
  "main": "dist/extension.js",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/runtime": "^7.13.10",
    "@gera2ld/locky": "^0.1.1",
    "@gera2ld/plaid": "~2.3.0",
    "@gera2ld/plaid-common-ts": "~2.3.1",
    "@gera2ld/plaid-rollup": "~2.3.0",
    "@types/glob": "^7.1.3",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^14.14.35",
    "@types/vscode": "~1.51.0",
    "d3": "^6.6.0",
    "del": "^6.0.0",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "husky": "^4.3.8",
    "lodash.debounce": "^4.0.8",
    "markmap-lib": "^0.11.3",
    "markmap-toolbar": "^0.1.5",
    "markmap-view": "^0.2.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint",
      "pre-commit": "yarn transform -t"
    }
  }
}
